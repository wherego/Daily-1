<?xml version="1.0" encoding="utf-8"?>
<com.dexafree.materialList.view.BasicImageButtonsCardItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout"
    android:padding="3dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/MainCardView"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bookInfo_cover"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:contentDescription="@null"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_cover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/big_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:id="@+id/tv_bookInfo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingTop="12dp"
                    android:textColor="@color/black_button"
                    android:textSize="18sp"
                    tools:text="当我谈跑步时我谈些什么" />

                <TextView
                    android:id="@+id/tv_bookInfo_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:paddingBottom="@dimen/small_padding"
                    android:textColor="@color/description_color"
                    android:textSize="@dimen/description_size"
                    tools:text="村上春树" />

                <TextView
                    android:id="@+id/tv_bookInfo_pages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/small_padding"
                    android:textSize="14sp"
                    tools:text="120页" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.dexafree.materialList.view.BasicImageButtonsCardItemView>